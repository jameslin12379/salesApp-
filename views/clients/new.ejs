<% include ../partials/header %>

<div class="container">
    <% if (errors.length > 0) {  %>
    <% for(var i = 0; i < errors.length; i++) { %>
    <div class="alert alert-danger" role="alert">
        <%= errors[i].msg %>
    </div>
    <% } %>
    <% } %>

    <form action="/clients" method="post">
        <div class="form-group">
            <input type="text" name="firstname" class="form-control" placeholder="First name" <% if (inputs.length > 0) { %>value="<%= inputs[0].firstname %>"<% } %> required>
        </div>
        <div class="form-group">
            <input type="text" name="lastname" class="form-control" placeholder="Last name" <% if (inputs.length > 0) { %>value="<%= inputs[0].lastname %>"<% } %> required>
        </div>
        <div class="form-group">
            <input type="date" name="dob" class="form-control" placeholder="DOB" <% if (inputs.length > 0) { %>value="<%= inputs[0].dob %>"<% } %> required>
        </div>
        <div class="form-group">
            <select name="gender">
                <option <% if (inputs.length > 0) { %><% if (inputs[0].gender === 'M'){ %> selected <% } %><% } %>value="M">Male</option>
                <option <% if (inputs.length > 0) { %><% if (inputs[0].gender === 'F'){ %> selected <% } %><% } %> value="F">Female</option>
            </select>
        </div>
        <div class="form-group">
            <input type="text" name="city" class="form-control" placeholder="City" <% if (inputs.length > 0) { %>value="<%= inputs[0].city %>"<% } %> required>
        </div>
        <div class="form-group">
            <input type="text" name="state" class="form-control" placeholder="State" <% if (inputs.length > 0) { %>value="<%= inputs[0].state %>"<% } %> required>
        </div>
        <div class="form-group">
            <input type="email" name="email" class="form-control" placeholder="Email" <% if (inputs.length > 0) { %>value="<%= inputs[0].email %>"<% } %> required>
        </div>
        <div class="form-group">
            <input type="tel" name="tel" class="form-control" placeholder="Telephone number" <% if (inputs.length > 0) { %>value="<%= inputs[0].tel %>"<% } %> required>
        </div>
        <button type="submit" class="btn btn-primary">Create client</button>
    </form>



</div>

<% include ../partials/footer %>