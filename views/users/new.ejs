                    </div>

                    <div class="mb-3">
                        <input type="password" class="form-control" name="password" placeholder="Password" <% if (inputs.length > 0) { %>value="<%= inputs[0].password %>"<% } %> required>
                    </div>

                    <button class="btn btn-primary btn-lg btn-block" type="submit">Create user</button>
                </form>
        </div>
